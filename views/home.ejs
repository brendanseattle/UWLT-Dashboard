<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.5.1/css/bulma.min.css">
    <link rel="stylesheet" href="/css/master.css">
    <script
      src="https://code.jquery.com/jquery-3.2.1.min.js"
      integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
      crossorigin="anonymous">
    </script>
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body>

    <div class="container-3">
      <div class="container-2 req-inc">
        <div class="container-1 req">
          <p class=" count is-size-2" id="totaltickets"> Total Tickets: <%=body[0].count + body[1].count + body[2].count%></p>
          <div class="container-flex">
            <%for (var i = 0; i < 3; i++){ %>
            <div class="box all-box content">
              <h1 class="title "><%=name[i]%></h1>
              <h2 class="subtitle is-3">Number of Tickets: <strong><%=body[i].count%></strong></h2>
              <h1 class = "is-size-4"> Oldest Ticket:</h1>
              <ul>
                <%if (body[i].oldest != undefined) { %>
                <li class="is-size-5">Last Modified On: <%= body[i].oldest.sys_updated_on %> </li>
                <%} else {%>
                <li class="is-size-5"> N/A</li>
                <%}%>
              </ul>
              <%if (body[i].oldest != undefined) {%>
              <h1 class = "is-size-4">Ticket Details:</h1>
              <table class="table">
                <thead>
                  <tr>
                    <th>Req Number</th>
                    <th>State</th>
                    <th>Short Description</th>
                  </tr>
                </thead>
                <tbody class="tickets">
                  <tr>
                      <th><%=body[i].oldest.number%></th>
                      <%if (body[i].oldest.state == 1) {%>
                        <th>New</th>
                      <%} else {%>
                        <th>Open</th>
                      <%}%>
                      <th><%=body[i].oldest.short_description.substring(0,20)%></th>
                  </tr>
                </tbody>
              </table>
              <%} %>
            </div>
            <%}%>
          </div>
          <div class="container-flex">
            <div class=" box old-box content">
              <h1 class= "title"><u>Oldest Ticket:</u> <i><%=oldest.number%></i></h1>
              <h2 class="subtitle is-5">
                <u>Description:</u> <i><%=oldest.short_description%></i>
                <br>
                <u>State:</u> <i><%=oldest.state%></i>
              </h2>
            </div>
          </div>
        </div>
        <div class="container-1 inc">
          <div class="container-flex">
          </div>
        </div>
      </div>
      <div class="container-2 consult">
        <div class="">

        </div>
      </div>
    </div>

    <script src= "js/dashboard.js" type="text/javascript"></script>
  </body>
</html>
